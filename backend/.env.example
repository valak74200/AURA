# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_SESSION_DURATION=1800  # 30 minutes
ENVIRONMENT=development

# External Services
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/aura

# Performance Tuning
MAX_CONCURRENT_SESSIONS=100
AUDIO_CHUNK_SIZE=1600  # 100ms at 16kHz
AUDIO_SAMPLE_RATE=16000

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/aura.log

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Audio Processing
MAX_AUDIO_FILE_SIZE=10485760  # 10MB
SUPPORTED_AUDIO_FORMATS=["wav", "mp3", "m4a", "ogg"]

# AI Model Configuration - Updated to Gemini 2.5
DEFAULT_GEMINI_MODEL=gemini-2.5-flash
GEMINI_THINKING_MODEL=gemini-2.5-flash:thinking
GEMINI_PRO_MODEL=gemini-2.5-pro
DEFAULT_THINKING_BUDGET=1000
MAX_THINKING_BUDGET=5000

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
